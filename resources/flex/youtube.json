{
  "type": "bubble",
  "direction": "ltr",
  "header": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "Video Title",
        "size": "xs",
        "align": "center"
      }
    ]
  },
  "hero": {
    "type": "image",
    "url": "Video Thumbnail",
    "size": "full",
    "aspectRatio": "16:9",
    "aspectMode": "cover",
    "action": {
      "type": "uri",
      "uri": "Video Link"
    }
  },
  "body": {
    "type": "box",
    "layout": "horizontal",
    "contents": [
      {
        "type": "text",
        "text": "Video Views",
        "margin": "xs",
        "align": "center"
      },
      {
        "type": "separator",
        "margin": "sm",
        "color": "#000000"
      },
      {
        "type": "text",
        "text": "Video Likes",
        "margin": "sm",
        "align": "center"
      }
    ]
  }
}
